<div id="particles-js"></div>
<div class="pr__blog__area ptb--60">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="pr__blog__wrapper">
                    <!-- Start Single Blog -->
                    {% for blog in blogs | reverse %} {% if loop.index == 1 %}
                    <article class="blog">
                        <div class="title">
                            <span>{{blog['category']}}</span>
                            <h4>
                                <a href="/Blog/Blog-detail/{{blog['title']}}">{{blog['title']}}</a>
                            </h4>
                            <ul>
                                <li>{{'index_page.blog_author'|trans}} {{blog['author']}}</li>
                                <li>{{blog['post_date']|date('Y-m-d')}}</li>
                            </ul>
                        </div>
                        <div class="thumb text-center">
                            <a href="/Blog/Blog-detail/{{blog['title']}}">
                                <img src="{{ asset('uploads/images/blog/' ~ blog['image']) }}" alt="yunkun blog" style="max-height:800px;max-width:100%">
                            </a>
                        </div>
                        <div class="content text-justify">
                            {{blog['pre_html']|raw}} ...
                        </div>
                        <div class="blog__btn">
                            <a class="pr__btn green__btn" href="/Blog/Blog-detail/{{blog['title']}}">{{'index_page.readmore'|trans}}</a>
                        </div>
                        <div class="blog__footer">
                            <div class="share">
                                {% if not blog['edit_date']|date('Y-m-d H:i:s') is same as(blog['post_date']|date('Y-m-d H:i:s')) or not blog['editor'] is
                                same as(blog['author']) %}
                                <p>{{'index_page.edited'|trans}} {{blog['edit_date']|date('Y-m-d H:i:s')}} {{'index_page.by'|trans}}
                                    {{blog['editor']}}</p>
                                {% endif %}
                            </div>
                        </div>
                    </article>
                    <!-- End Single Blog -->
                    {% endif %} {% endfor %} {% for blog in blogs | reverse %}
                    <!-- Start Blog Area -->
                    {% if loop.index != 1 and loop.index
                    <=3 %} {% if loop.index%2==0 %} <article class="blog--2">
                        <div class="thumb text-left">
                            <a href="/Blog/Blog-detail/{{blog['title']}}">
                                <img src="{{ asset('uploads/images/blog/' ~ blog['image']) }}" alt="yunkun blog" style="max-height:400px;max-width:100%">
                            </a>
                        </div>
                        <div class="content">
                            <div class="blog__top">
                                <p>{{blog['category']}}</p>
                                <ul>
                                    <li>{{'index_page.blog_author'|trans}} {{blog['author']}}</li>
                                    <li>{{blog['post_date']|date('Y-m-d')}}</li>
                                </ul>
                            </div>
                            <h4>
                                <a href="/Blog/Blog-detail/{{blog['title']}}">{{blog['title']}}</a>
                            </h4>
                            <div class="text-justify">{{blog['pre_html']|raw}} ...</div>
                            <div class="blog__btn">
                                <a class="pr__btn green__btn btn__index__portal" href="/Blog/Blog-detail/{{blog['title']}}">{{'index_page.readmore'|trans}}</a>
                            </div>
                        </div>
                        </article>
                        {% else %}
                        <article class="blog--2 align__right">
                            <div class="content">
                                <div class="blog__top">
                                    <p>{{blog['category']}}</p>
                                    <ul>
                                        <li>{{'index_page.blog_author'|trans}} {{blog['author']}}</li>
                                        <li>{{blog['post_date']|date('Y-m-d')}}</li>
                                    </ul>
                                </div>
                                <h4>
                                    <a href="/Blog/Blog-detail/{{blog['title']}}">{{blog['title']}}</a>
                                </h4>
                                <div class="text-justify">{{blog['pre_html']|raw}} ...</div>
                                <div class="blog__btn">
                                    <a class="pr__btn green__btn btn__index__portal" href="/Blog/Blog-detail/{{blog['title']}}">{{'index_page.readmore'|trans}}</a>
                                </div>
                            </div>
                            <div class="thumb text-right">
                                <a href="/Blog/Blog-detail/{{blog['title']}}">
                                    <img src="{{ asset('uploads/images/blog/' ~ blog['image']) }}" alt="yunkun blog" style="max-height:400px;max-width:100%">
                                </a>
                            </div>
                        </article>
                        {% endif %}
                        <!-- End Blog Area -->
                        {% endif %} {% endfor %}
                        <!-- Start Banner Area -->
                        <div class="pn__banner__area">
                            <a href="/Blog">
                                <img src="{{ asset('images/bg/4.jpg') }}" alt="yunkun blog">
                            </a>
                        </div>
                        <!-- End Banner Area -->
                </div>
            </div>
            <div class="col-lg-3 col-md-12 col-sm-12 col-12 md-mt--60 sm-mt--60">
                <div class="pr__sidebar">
                    <!-- Start Search Area -->
                    {#
                    <div class="single__wedget pr__search">
