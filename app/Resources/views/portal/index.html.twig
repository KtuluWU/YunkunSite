                    </div>
                    <!-- End Youtube Area -->
                    <!-- Start Post Area -->
                    <div class="single__wedget pr__post">
                        <h2>{{'index_page.recent'|trans}}</h2>
                        {% for blog in blogs | reverse %} {% if loop.index == 1 %}
                        <div class="recent__post single__post">
                            <div class="thumb">
                                <a href="/Blog/Blog-detail/{{blog['title']}}">
                                    <img src="{{ asset('uploads/images/blog/' ~ blog['image']) }}" alt="yunkun blog">
                                </a>
                            </div>
                            <div class="content">
                                <h4>
                                    <a href="/Blog/Blog-detail/{{blog['title']}}">{{blog['title']|raw}}</a>
                                </h4>
                                <span>{{blog['post_date']|date('Y-m-d')}}</span>
                            </div>
                        </div>
                        {% endif %} {% endfor %}
                        <div class="sm__post__wrap">
                            {% for blog in blogs | reverse %} {% if loop.index
                            <=5 and loop.index !=1 %} <div class="recent__post">
                                <div class="thumb">
                                    <a href="/Blog/Blog-detail/{{blog['title']}}">
                                        <img src="{{ asset('uploads/images/blog/' ~ blog['image']) }}" alt="yunkun blog">
                                    </a>
                                </div>
                                <div class="content">
                                    <h4>
                                        <a href="/Blog/Blog-detail/{{blog['title']}}">{{blog['title']|raw}}</a>
                                    </h4>
                                    <span>{{blog['post_date']|date('Y-m-d')}}</span>
                                </div>
                        </div>
                        {% endif %} {% endfor %}
                    </div>
                    <a class="blog__btn__index__portal pr__btn text-center" href="/Blog">{{'index_page.more_blog'|trans}}</a>
                </div>
                <!-- End Post Area -->
            </div>
        </div>
    </div>
</div>
</div>
