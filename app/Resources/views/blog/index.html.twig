{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base_yun.html.twig' %}
{% block title %}Yunkun Blog{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/blog_page.css') }}"/>
{% endblock %}
{% set bradcaump_title = 'summury.blog'|trans %}
{% set breadcrumb_item = 'summury.blog'|trans %}
{% block content %}
<!-- Start Blog Area -->
<div class="pnora__blog__area ptb--60 bg--white blog-index">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Start Single Blog -->
                {% for blog in blogs_paginate %}
                <article class="blog">
                    <div class="title">
                        <h4>
                            <a href="./Blog-detail/{{blog.Title}}">{{blog.Title}}</a>
                        </h4>
                        <ul>
                            <li>{{'blog_page.author'|trans}} {{blog.Author}}
                            </li>
                            <li>{{blog.PostDate|date('Y-m-d')}}</li>
                        </ul>
                    </div>
                    <div class="thumb text-center">
                        <a href="./Blog-detail/{{blog.Title}}"><img src="{{ asset('uploads/images/blog/' ~ blog.image) }}" alt="yunkun blog" style="max-height:800px"></a>
                    </div>
                    <div class="content text-justify">
                        {{blog.PreHtml|raw}} ...
                    </div>
                    <div class="blog__btn">
                        <a class="pr__btn green__btn" href="./Blog-detail/{{blog.title}}">{{'blog_page.readmore'|trans}}</a>
                    </div>
                </article>
                <!-- End Single Blog -->
                {% endfor %}
                <div class="text-center">
                    {{ knp_pagination_render(blogs_paginate) }}
                </div>
                <!-- Start Pagenation -->
                {# <div class="pr__pagination">
                    <div class="page__prev">
                        <a href="#">
                            <i class="fa fa-angle-double-left"></i>pre post</a>
                        <p>Half City Half Amazing</p>
                    </div>
                    <div class="page__prev">
                        <a href="#">next post
                            <i class="fa fa-angle-double-right"></i>
                        </a>
                        <p>Blog on Brands Experience</p>
                    </div>
                </div> #}
                <!-- End Pagenation -->
                <!-- Start Banner Area -->
                <div class="pn__banner__area mt--50">
                    <a href="/Blog">
                        <img src="{{ asset('images/bg/4.jpg') }}" alt="yunkun blog">
                    </a>
                </div>
                <!-- End Banner Area -->
            </div>
        </div>
    </div>
</div>
<!-- End Blog Area -->
{% endblock %}